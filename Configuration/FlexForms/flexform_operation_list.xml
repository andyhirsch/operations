<!--suppress CheckTagEmptyBody -->
<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <sheetTitle>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.sheet.settings</sheetTitle>
                <type>array</type>
                <el>

                    <!-- Category Mode -->
                    <settings.categoryConjunction>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.categoryConjunction.label</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.categoryConjunction.description</description>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.categoryConjunction.all</label>
                                    <value></value>
                                </numIndex>
                                <numIndex index="1">
                                    <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.categoryConjunction.or</label>
                                    <value>or</value>
                                </numIndex>
                                <numIndex index="2">
                                    <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.categoryConjunction.and</label>
                                    <value>and</value>
                                </numIndex>
                                <numIndex index="3">
                                    <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.categoryConjunction.notor</label>
                                    <value>notor</value>
                                </numIndex>
                                <numIndex index="4">
                                    <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.categoryConjunction.notand</label>
                                    <value>notand</value>
                                </numIndex>
                            </items>
                        </config>
                    </settings.categoryConjunction>

                    <!-- Category -->
                    <settings.category>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.category.label</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.category.description</description>
                        <config>
                            <type>category</type>
                            <treeConfig>
                                <startingPoints>###SITE:settings.operations.rootCategory###</startingPoints>
                                <appearance>
                                    <expandAll>1</expandAll>
                                    <showHeader>1</showHeader>
                                    <maxLevels>999</maxLevels>
                                </appearance>
                            </treeConfig>
                            <maxitems>50</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.category>

                    <settings.limit>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.limit</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.limit.description</description>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default></default>
                            <eval>trim,num</eval>
                        </config>
                    </settings.limit>

                    <settings.itemsPerPage>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.itemsPerPage</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.itemsPerPage.description</description>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default></default>
                            <eval>trim,num</eval>
                        </config>
                    </settings.itemsPerPage>

                    <settings.hidePagination>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.hidePagination</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.hidePagination.description</description>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.hidePagination>

                    <settings.hideFilter>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.hideFilter</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.hideFilter.description</description>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.hideFilter>

                    <settings.showMap>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.showMap</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.showMap.description</description>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.showMap>

                </el>
            </ROOT>
        </sDEF>
        <sIMG>
            <ROOT>
                <sheetTitle>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.sheet.media</sheetTitle>
                <type>array</type>
                <el>
                    <settings.showMediaInList>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.showMediaInList</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.showMediaInList.description</description>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.showMediaInList>

                    <settings.listMediaWidth>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.listMediaWidth</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default></default>
                            <eval>trim,alphanum</eval>
                        </config>
                    </settings.listMediaWidth>

                    <settings.listMediaHeight>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.listMediaHeight</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default></default>
                            <eval>trim,alphanum</eval>
                        </config>
                    </settings.listMediaHeight>

                </el>
            </ROOT>
        </sIMG>
        <sTemplate>
            <ROOT>
                <sheetTitle>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.sheet.template</sheetTitle>
                <type>array</type>
                <el>
                    <settings.templateLayout>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.templateLayout</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.templateLayout.description</description>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <itemsProcFunc>Kanow\Operations\Hooks\ItemsProcFunc->user_templateLayout</itemsProcFunc>
                           <items><label></label><value></value></items>
                        </config>
                    </settings.templateLayout>

                    <settings.cropTeaser>
                        <exclude>1</exclude>
                        <label>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.teaserMaxChars</label>
                        <description>LLL:EXT:operations/Resources/Private/Language/locallang_db.xlf:flexform.teaserMaxChars.description</description>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default></default>
                            <eval>trim,num</eval>
                        </config>
                    </settings.cropTeaser>
                </el>
            </ROOT>
        </sTemplate>
    </sheets>
</T3DataStructure>
